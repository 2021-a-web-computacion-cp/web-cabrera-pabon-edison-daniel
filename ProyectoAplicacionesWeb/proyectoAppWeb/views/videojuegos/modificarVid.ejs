<%- include('../frontend/cabecera')%>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modificación de Videojuego</title>
    <style>
        table {
            align-self: center;
            width: 90%;
            border: 1px solid #000;
            margin-left: 30px;
            margin-right: auto;
            margin-top: auto;
            margin-bottom: auto;
        }

        th,
        td {
            width: 25%;
            text-align: center;
            vertical-align: top;
            border: 1px solid #000;
            border-collapse: collapse;
            padding: 0.3em;
            caption-side: bottom;
            background: rgb(200, 229, 224);
        }

        input {
            text-align: center;
        }

        body {
            background-color: rgb(247, 238, 245);
        }
    </style>
<body>
<h1 style="text-align: center">MODIFICACIÓN DE VIDEOJUEGO</h1>
<div>
    <form action="/videojuegos/actualizar-videojuego/<%=datos.videojuego.id%>" method="post">
        <table>
            <caption>Información del videojuego</caption>
            <tr>
                <th scope="col">IdVideojuego</th>
                <th scope="col">Creador</th>
                <th scope="col">Nombre</th>
                <th scope="col">Fecha de Lanzamiento</th>
                <th scope="col">Disponibilidad</th>
                <th scope="col">Costo</th>
            </tr>
            <tr>
                <td>
                    <label for="idVid" hidden="true"></label>
                    <input id="idVid" type="text" name="idVid"
                           value="<%= datos.videojuego.id %>" disabled>
                </td>
                <td>
                    <label hidden="true" for="nombre"></label>
                    <input id="nombre" type="text" name="nombre" value="<%= datos.videojuego.creador %>"
                           disabled>
                </td>
                <td>
                    <label hidden="true" for="nombre"></label>
                    <input id="nombre" type="text" name="nombre" value="<%= datos.videojuego.nombre %>">
                </td>
                <td>
                    <label hidden="true" for="fechaLanzamiento"></label>
                    <input id="fechaLanzamiento" type="text" name="fechaLanzamiento"
                           value="<%= datos.videojuego.fechaLanzamiento.getDay() + "/" +
                           datos.videojuego.fechaLanzamiento.getMonth() + "/" +
                           datos.videojuego.fechaLanzamiento.getFullYear() %>"
                    disabled>
                </td>
                <td>
                    <%if(datos.videojuego.disponibilidad === true){%>
                        <label><input type="checkbox" id="cartelera" name="cartelera" checked="checked"> DISPONIBLE</label>
                    <%}else{%>
                        <label><input type="checkbox" id="cartelera" name="cartelera"> DISPONIBLE</label>
                    <%}%>
                </td>
                <td>
                    <label hidden="true" for="costo"></label>
                    <input id="costo" type="number" name="costo" value="<%= datos.videojuego.costo %>">
                </td>
            </tr>
        </table>
        <br><br>
        <div class="contenedor">
        <button type="submit" class="btn btn-success btn-block">Actualizar</button>
        </div>
        <br><br>
    </form>
</div>
<% const path = '/videojuegos/lista-vid?idDev=' + datos.videojuego.id %>
<div class="contenedor">
<a href="<%= path %>" method="get">
    <button class="btn btn-primary">Cancelar</button>
</a>
</div>

</body>

<%- include('../frontend/cabecera')%>